spring:
  datasource:
    url: jdbc:mysql://localhost:3306/careers_dev
    username: careers_dev_user
    password: password
  jpa:
    hibernate:
      ddl-auto: validate
    database-platform: org.hibernate.dialect.MySQL5InnoDBDialect
    database: mysql
    show-sql: true
    properties:
      javax:
        persistence:
          schema-generation:
            create-source: metadata
            scripts:
              action: create
              create-target: careers_database_create.sql